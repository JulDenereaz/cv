# Basic .htaccess for PHP website
RewriteEngine On

# Allow access to CSS, JS, and image files
RewriteCond %{REQUEST_FILENAME} \.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf)$ [NC]
RewriteRule ^.*$ - [L]

# Clean URLs - Remove .php extension (only for files that don't exist as actual files)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Security - Block access to sensitive files
<Files ~ "^\.ht">
Order allow,deny
Deny from all
</Files>

<Files ~ "config\.php$">
Order allow,deny
Deny from all
</Files>